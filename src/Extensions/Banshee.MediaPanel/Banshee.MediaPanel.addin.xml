<?xml version="1.0" encoding="utf-8"?>
<Addin 
    id="Banshee.MediaPanel"
    version="1.0"
    compatVersion="1.0"
    copyright="Â© 2009-2010 Novell Inc. Licensed under the MIT X11 license."
    name="MediaPanel Support"
    description="Provides a custom media panel to quickly browse and play your media."
    author="Aaron Bockover, Bertrand Lorentz"
    url="http://banshee.fm/"
    defaultEnabled="true">

  <Dependencies>
    <Addin id="Banshee.Services" version="1.0"/>
    <Addin id="Banshee.ThickClient" version="1.0"/>
  </Dependencies>
  
  <Extension path="/Banshee/ServiceManager/Service">
    <Service class="Banshee.MediaPanel.MediaPanelService"/>
  </Extension>

  <!-- FIXME: this theme is heavily broken in Ubuntu's GTK3, and if anything, it
              should be enabled/disabled when the MediaPanel UI is shown/hidden
  <Extension path="/Banshee/ThickClient/GtkBaseClient/PostInitializeGtk">
    <PostInitializeGtk class="Banshee.MediaPanel.MediaPanelThemeLoader"/>
  </Extension-->
   
</Addin>
